# ========================================
# Steam Credentials (OPTIONAL)
# ========================================
# Cubic Odyssey supports anonymous downloads.
# Leave these empty to use anonymous login, or provide
# your Steam credentials if you prefer authenticated downloads.
STEAM_USER=
STEAM_PASS=
# Only needed if you have Steam Guard enabled
STEAM_AUTH=

# ========================================
# Server Configuration
# ========================================

# Game mode: adventure or creative
GAMEMODE=adventure

# Port range the server listens on
STARTING_PORT=20000
ENDING_PORT=20015

# The name displayed in the server browser
SERVER_NAME="Cubic Odyssey Container Server"

# Password to join the server (leave empty for no password)
SERVER_PASSWORD=

# Maximum number of players allowed
MAX_PLAYERS=10

# Seed for galaxy generation (max 11 digits)
GALAXY_SEED=0

# Enabble relaying? (FALSE is recommended)
ALLOW_RELAYING=FALSE

# Whether the server appears in the public server list
# TRUE = private (not listed), FALSE = public (listed)
PRIVATE_SERVER=FALSE

# Enabble crash dumps? (FALSE is recommended)
ENABLE_CRASH_DUMPS=FALSE
# Enabble relaying? (FALSE is recommended)
ENABLE_LOGGING=FALSE

# ========================================
# Difficulty Settings
# ========================================

# Multipliers
DAMAGE_PLAYER_SCALE=1
DAMAGE_PIRATE_SCALE=1
DAMAGE_CREATURE_SCALE=1
DAMAGE_DARKNESS_SCALE=1
DAMAGE_PLAYER_SHIP_SCALE=1
DAMAGE_PIRATE_SHIP_SCALE=1
CRAFTING_COST_SCALE=1
TRADING_COST_SCALE=1

# On/Off options (true=on, false=off)
DAMAGE_GEAR_ON_DEATH=false
LOSE_QBITS_ON_DEATH=false

# ========================================
# Update Settings
# ========================================
# Auto-update server on start/restart
# 1 = enabled, 0 = disabled
AUTO_UPDATE=1

# ========================================
# Lobby Settings
# ========================================

# set this to a randomly generated MAC address (format 01:23:45:67:89:ab)
# to ensure the same lobby key on every container restart
MAC_ADDRESS=
